/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.popup-score{
  width: 100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  opacity: 1.9;
  background: #ffffff;
  transition: left 500ms;
}
.popup-score.left-out{
  left:-100%;
}
.popup-score.mentality{
  z-index: 1102;
}
.popup-score.finish{
  z-index: 1103;
}
.finish-box{
  z-index: 1203;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height:100%;
  text-align: center;
  background: rgba(255,255,255,0.7);
}
.finish-box image{
  border-radius: 30px;
  width:74%;
  height:35%;
  animation: show 0.5s 1;
}
@-webkit-keyframes show {
  0% {
    width:10%;
    height:10%;
  }
  60% {
    width:80%;
    height:40%;
  }
  100% {
    width:74%;
    height:35%;
  }
}
