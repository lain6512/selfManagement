/*自律模块*/
.autonomic-box{
  background: #ffffff;
  padding:30px 0 0px 0px;
  border-top:#f1f1f1 1px solid;
}
.autonomic {
  width: 300px;
  height:54px;
  margin: 0 auto;
  clear: both;
}
.autonomic .btn-mar{
  width: 136px;
  height: 38px;
  position: relative;
}
.car-btn {
  width: 134px;
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  box-sizing: content-box;
  padding: 0;
}
.on-click{
  position: absolute;
  width: 134px;
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  top: -14px;
  left: 1px;
  animation:mcar-btn-a 0.5s ease;
  z-index:200;

}
.autonomic-box .index-btn{
  width: 300px;
  height: 42px;
  font-size:16px;
  /*border:#a2daa2 1px solid;*/
  /*border:1px solid #f1f1f1;*/
  background: #ffffff;
  color: #1AAD19;

}
@keyframes mcar-btn-a
{
  0%  {font-size:80px;width: 600px;height: 160px;line-height: 160px;top: -70px;left: -300px;opacity:0;}
  87% {font-size:14px;width: 134px;height: 36px;line-height: 36px;top: -14px;left: 1px;opacity:1;}
  90% {font-size:16px;width: 130px;height: 38px;line-height: 38px;top: -16px;left: 1px;opacity:1;}
  93% {font-size:14px;width: 134px;height: 36px;line-height: 36px;top: -14px;left: 1px;opacity:1;}
  96% {font-size:15px;width: 124px;height: 34px;line-height: 34px;top: -15px;left: 1px;opacity:1;}
  100% {font-size:14px;width: 134px;height: 36px;line-height: 36px;top: -14px;left: 1px;opacity:1;}
}

